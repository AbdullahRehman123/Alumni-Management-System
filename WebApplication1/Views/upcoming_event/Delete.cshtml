@model WebApplication1.Models.upcoming_event

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<div class="mt-5 p-2">
    <h4 class="mb-2 p-2 rounded-2 text-wrap">Are you sure you want to delete this Upcoming event?</h4>
    <div class="rounded">
        <hr />
        <dl class="dl-horizontal table-striped rounded-5">
            <div class="list-group-item-secondary p-2 rounded-2">
                <dt>
                    @Html.DisplayNameFor(model => model.event_title)
                </dt>

                <dd class="mt-3">
                    @Html.DisplayFor(model => model.event_title)
                </dd>
            </div>
            <div class="list-group-item p-2 rounded-2">
                <dt>
                    @Html.DisplayNameFor(model => model.event_date_time)
                </dt>

                <dd class="mt-3">
                    @Html.DisplayFor(model => model.event_date_time)
                </dd>
            </div>

            <div class="list-group-item-secondary p-2 rounded-2">
                <dt>
                    @Html.DisplayNameFor(model => model.event_details)
                </dt>

                <dd class="mt-3">
                    @Html.DisplayFor(model => model.event_details)
                </dd>
            </div>

            <div class="list-group-item p-2 rounded-2">
                <dt>
                    @Html.DisplayNameFor(model => model.event_link)
                </dt>

                <dd class="mt-3">
                    @Html.DisplayFor(model => model.event_link)
                </dd>
            </div>

            <div class="list-group-item-secondary p-2 rounded-2">
                <dt>
                    @Html.DisplayNameFor(model => model.event_expir_date)
                </dt>

                <dd class="mt-3">
                    @Html.DisplayFor(model => model.event_expir_date)
                </dd>
            </div>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="mt-2">
                <button type="submit"  class="sppb-btn btn-danger">Delete</button> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
</div>