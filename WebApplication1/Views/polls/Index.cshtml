        for (let i = 0; i < ele.length; i++) {
            if (ele[i].checked)
                return ele[i].value;
        }
    }

    function validateForm() {
        let checked = true;
        for (let i = 0; i < radioIds.length; i++) {
            if (checked) {
                var x = radioIds[i].toString().toLowerCase();
                var ele = document.getElementsByName(x);
                for (let i = 0; i < ele.length; i++) {
                    if (ele[i].checked) {
                        checked = true;
                        break;
                    }
                    else {
                        checked = false;
                    }
                }
            }
        }
        if (!checked) {
            alert("Please select candidates from all categories")
            return false;
        }
        else {
            return confirm('Are you sure you want to submit. \nYou will not be able to change once submitted.');
        }
    }

