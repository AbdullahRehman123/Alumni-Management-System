@model WebApplication1.Models.alumni_admin
@using System.Configuration;

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<div class="mt-5 p-5 rounded-3">
    <form action="/alumni_admin/Create " class="needs-validation" method="post" enctype="multipart/form-data" novalidate>

        @Html.AntiForgeryToken()

        <div class="form-horizontal bg-light mt-2 rounded-3 p-2">

            <div class="p-3">
                @Html.ActionLink("Back to List", "Index")
            </div>
            <h4 class="row justify-content-center pt-2 pb-5">Admin Registration</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group row justify-content-center">
                @Html.LabelFor(model => model.adm_name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.adm_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.adm_name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row justify-content-center">
                @Html.LabelFor(model => model.adm_email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.adm_email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.adm_email, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row justify-content-center">
                @Html.LabelFor(model => model.adm_password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.adm_password, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.adm_password, "", new { @class = "text-danger" })
                </div>
            </div>

            @{
                string configvalue1 = ConfigurationManager.AppSettings["campus_list"];
                string[] values = configvalue1.Split(',').Select(sValue => sValue.Trim()).ToArray();
                List<SelectListItem> campuses = new List<SelectListItem>();
                for (int i = 0; i < values.Length; i++)
                {
                    if (i == 0)
                    {
                        campuses.Add(new SelectListItem { Text = values[i], Selected = true, Disabled = true });
                    }
                    else
                    {
                        campuses.Add(new SelectListItem { Text = values[i], Value = values[i] });
                    }
                }
            }

            <div class="form-group row justify-content-center">
                @Html.LabelFor(model => model.campus, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(model => model.campus, campuses)
                    @Html.ValidationMessageFor(model => model.campus, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row justify-content-center">
                @Html.LabelFor(model => model.is_active, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.DropDownListFor(m => m.is_active, new List<SelectListItem>() { new SelectListItem { Text = "True", Value = "true", Selected = true }, new SelectListItem { Text = "False", Value = "false", Selected = false } })
                    @Html.ValidationMessageFor(model => model.is_active, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row justify-content-center">
                <div class="offset-2 col-md-6">
                    <input type="submit" value="Register" class="sppb-btn" />
                </div>
            </div>
        </div>
    </form>
</div>

<script src="~/Content/util.js"></script>
<script src="~/Content/menu-aim.js"></script>
<script src="~/Content/main.js"></script>
